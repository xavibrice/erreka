{% extends 'admin/layout.html.twig' %}

{% block content %}
    <!-- Page Heading -->
{#    <h1 class="h3 mb-4 text-gray-800 float-left">Company Index</h1>#}
{#    <h1>Company index</h1>#}
{#    <a class="btn btn-success float-right" href="{{ path('company_new') }}">Create new</a>#}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
    {#        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>#}
            <h1 class="h3 mb-4 text-gray-800 float-left">Company Index</h1>
            <a class="btn btn-success float-right" href="{{ path('company_new') }}">Create new</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-sm-12 col-md-6">
                    <div id="dataTable" class="dataTables"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label></div>
                </div>
                <table class="table table-bordered" id="dataTable" width="100%" cellpadding="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.id }}</td>
                            <td>{{ company.name }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('company_show', {'id': company.id}) }}">show</a>
                                <a class="btn btn-info" href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}