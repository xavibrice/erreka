{% extends 'base.html.twig' %}

{% block title %}Proposal{% endblock %}

{% block body %}
    <h1>Proposal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proposal.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ proposal.price }}</td>
            </tr>
            <tr>
                <th>Agree</th>
                <td>{{ proposal.agree ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Contract</th>
                <td>{{ proposal.contract ? proposal.contract|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Scriptures</th>
                <td>{{ proposal.scriptures ? proposal.scriptures|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ proposal.created ? proposal.created|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('proposal_index') }}">back to list</a>

    <a href="{{ path('proposal_edit', {'id': proposal.id}) }}">edit</a>

    {{ include('proposal/_delete_form.html.twig') }}
{% endblock %}
