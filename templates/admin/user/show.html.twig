{% extends 'admin/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-4 text-gray-800 float-left">Ver {{ user.email }}</h1>
{#            <a class="btn btn-link float-right" href="{{ path('user_index') }}">Volver a lista</a>#}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Foto perfil</th>
                            <td>
{#                                <img class="img-thumbnail" src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="{{ user.firstName }}" width="300px"/>#}
                                foto
                            </td>
                        </tr>
                        <tr>
                            <th>Nombre y Apellidos</th>
                            <td>{{ user.firstName }} {{ user.lastName }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Empresa</th>
                            <td>{{ user.company.name }}</td>
                        </tr>
                        <tr>
                            <th>Noticias</th>
                            <td>
                                {% if user.news.count > 0 %}
                                    <ul>
                                        {% for new in user.news %}
                                            <li>
                                                {{ new.price }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    No hay noticias
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            {{ include('admin/_back_link.html.twig', {'route': 'user_index'}) }}
            {{ include('admin/_edit_link.html.twig', {'route': 'user_edit', 'id': user.id, 'button_label': 'Editar'}) }}
        </div>
    </div>
{#    {{ include('user/_delete_form.html.twig') }}#}

{% endblock %}
