{% extends 'admin/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-4 text-gray-800 float-left">Ver {{ user.email }}</h1>
            <a class="btn btn-link float-right" href="{{ path('user_index') }}">Volver a lista</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Acciones</th>
                            <td>
                                <a class="btn btn-primary float-left mr-1" href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
                                {{ include('admin/_delete_form.html.twig', {'route': 'user_delete', 'entity': user}) }}
                            </td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Empresa</th>
                            <td>{{ user.company.name }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{#    {{ include('user/_delete_form.html.twig') }}#}

{% endblock %}
