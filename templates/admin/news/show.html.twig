{% extends 'admin/layout.html.twig' %}

{% block title %}News{% endblock %}

{% block content %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ news.price }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ news.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('news_index') }}">back to list</a>

    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>

    {{ include('admin/_delete_form.html.twig', {'route': 'news_delete', 'entity': news}) }}
{% endblock %}
