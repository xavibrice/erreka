{% extends 'admin/layout.html.twig' %}

{% block title %}Edit News{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-4 text-gray-800 float-left">Editar noticia</h1>
            {#        <a class="btn btn-link float-right" href="{{ path('company_index') }}">Volver a la lista</a>#}
        </div>
        <div class="card-body">
{#            {{ form_start(form) }}#}
{#            {{ form_widget(form) }}#}
{#            <button class="btn btn-success m-3">{{ button_label|default('Actualizar') }}</button>#}
{#            {{ form_end(form) }}#}
{#            {{ include('admin/news/_form_news.html.twig', {'button_label': 'Actualizar'}) }}#}
            {{ form_start(form) }}
            {% if is_granted('ROLE_ADMIN') %}
                {{ form_row(form.commercial) }}
            {% endif %}
            {{ form_row(form.zone) }}
            {{ form_row(form.street) }}
            {{ form_row(form.situation) }}
            {{ form_row(form.reason) }}
            {{ form_row(form.portal) }}
            {{ form_row(form.floor) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.mobile) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.price) }}
            {{ form_row(form.comment) }}
            {{ form_row(form.state) }}
            {{ form_row(form.created) }}
            {{ form_row(form.url) }}
{#            {{ form_row(form.historical) }}#}
            <button class="btn btn-success float-left">{{ button_label|default('Actualizar') }}</button>
            {{ form_end(form) }}
