{% extends 'admin/layout.html.twig' %}

{% block title %}Noticia{% endblock %}

{% block content %}
    <div class="row">
        <!-- Content Column -->
        <div class="col-auto mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary float-left">Detalles noticias a desarrollar</h6>
                    {#<h6 class="m-0 font-weight-bold text-primary float-right">
                        <a class="btn btn-success" href="">Crear Noticia</a>
                    </h6>#}
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <th>Agencia</th>
                                <td>
                                    <a href="{{ path('company_show', {'id': news.commercial.company.id }) }}">
                                        {{ news.commercial.company.name }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Comercial</th>
                                <td>
                                    <a href="{{ path('user_show', {'id': news.commercial.id }) }}">
                                        {{ news.commercial.firstName }} {{ news.commercial.lastName }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Zona</th>
                                <td>
                                    <a href="{{ path('zone_show', {'id': news.street.zone.id }) }}">
                                        {{ news.street.zone.name }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Calle</th>
                                <td>{{ news.street.name }} {{ news.portal }} - {{ news.floor }}</td>
                            </tr>
                            <tr>
                                <th>Propietario</th>
                                <td>{{ news.firstName }} {{ news.lastName }}</td>
                            </tr>
                            <tr>
                                <th>Contacto</th>
                                <td>{{ news.mobile }} - {{ news.phone }}</td>
                            </tr>
                            <tr>
                                <th>Correo</th>
                                <td>{{ news.email }}</td>
                            </tr>
                            <tr>
                                <th>Situaci√≥n</th>
                                <td>{{ news.reason.situation.name }}</td>
                            </tr>
                            <tr>
                                <th>Motivo</th>
                                <td>{{ news.reason.name }}</td>
                            </tr>
                            <tr>
                                <th>URL</th>
                                <td>{{ news.url }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
{#                    {{ include('admin/_back_link.html.twig', {'route': 'news_index'}) }}#}
                    {{ include('admin/_edit_link.html.twig', {'route': 'news_edit_new', 'id': news.id, 'button_label': 'Editar'}) }}
                </div>
            </div>
        </div>
        <div class="col-auto mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary float-left">Notas noticia a desarrollar (#{{ news.noteNews.count }}) </h6>
                    <h6 class="m-0 font-weight-bold text-primary float-right">Proxima llamada: {{ news.noteNews.last }}</h6>
                </div>
                <div class="card-body">
                    <div class="m-2">
                        {{ include('admin/_form.html.twig') }}
                    </div>
                    <div class="overflow-auto p-3 mb-3 mb-md-0 mr-md-3 bg-light" style="max-height: 400px;">
                        {% for noteNew in news.noteNews|reverse %}
                            <div class="col-md-12 mb-4">
                                <div class="card border-left-info shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-primary text-uppercase mb-1"><strong>{{ noteNew.noticeDate|date('d-m-Y') }} </strong></div>
                                                <div class="h5 mb-0 text-gray-800" data-toggle="tooltip" data-placement="top" title="{{ noteNew.note }}">
                                                    {{ noteNew.note|slice(0, 50) }}
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-sticky-note fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
