{% extends 'admin/layout.html.twig' %}
{#{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}#}

{% block title %}Crear Noticia{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 mb-4 text-gray-800 float-left">Crear nueva noticia</h1>
        {#        <a class="btn btn-link float-right" href="{{ path('company_index') }}">Volver a la lista</a>#}
    </div>
    <div class="card-body">
{#        {{ include('admin/_form.html.twig') }}#}
        {{ form_start(form) }}
        {% if is_granted('ROLE_ADMIN') %}
            {{ form_row(form.commercial) }}
        {% endif %}
        {{ form_row(form.zone) }}
        {{ form_row(form.streets) }}
        {{ form_row(form.situation) }}
        {{ form_row(form.reasons) }}
        {{ form_row(form.portal) }}
        {{ form_row(form.floor) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.mobile) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.price) }}
        {{ form_row(form.comment) }}
        <button class="btn btn-success float-left">{{ button_label|default('Guardar') }}</button>
        {{ form_end(form) }}

    </div>
    <div class="card-footer">
        {{ include('admin/_back_link.html.twig', {'route': 'news_index'}) }}
    </div>
</div>


{% endblock %}
