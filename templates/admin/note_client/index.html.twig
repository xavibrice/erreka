{% extends 'base.html.twig' %}

{% block title %}NoteClient index{% endblock %}

{% block body %}
    <h1>NoteClient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note_client in note_clients %}
            <tr>
                <td>{{ note_client.id }}</td>
                <td>{{ note_client.comment }}</td>
                <td>{{ note_client.created ? note_client.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('note_client_show', {'id': note_client.id}) }}">show</a>
                    <a href="{{ path('note_client_edit', {'id': note_client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('note_client_new') }}">Create new</a>
{% endblock %}
