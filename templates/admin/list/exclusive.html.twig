{% extends 'admin/layout.html.twig' %}

{% block title %}Listado de encargos{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-4 text-gray-800">Encargos </h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table-striped table-sm table-hover dataTable" id="dataTableEmpty" width="100%" cellpadding="0">
                    <thead>
                        <tr>
                            <th>Ref.</th>
                            <th>Agencia</th>
                            <th>Agente</th>
                            <th>Encargo</th>
                            <th>Zona</th>
                            <th>Dirección</th>
                            <th>P. Actual</th>
                            <th>Llaves</th>
                            <th>Fotos</th>
                            {% if agency.id == app.user.agency.id %}
                                <th>Acciones</th>
                            {% endif %}
                            {#<th>% Caro</th>
                            <th>Rebaj.</th>
                            <th>Últ. Reb.</th>
                            <th>% Reb.</th>#}
                        </tr>
                    </thead>
                    <tbody>
                    {% for exclusive in exclusives %}
                        <tr>
                        <td>{{ exclusive.reference }}</td>
                        <td>{{ exclusive.agency.name }}</td>
                        <td>{{ exclusive.commercial.fullName }}</td>
                        <td>{{ exclusive.charge.chargeType.name }}</td>
                        <td>{{ exclusive.street.zone.name }}</td>
                        <td>{{ exclusive.street.name }}, Nº {{ exclusive.portal }}, {{ exclusive.floor }}</td>
                        <td>{{ exclusive.charge.price|number_format(0, ',', '.') }}€</td>
                        <td>{{ exclusive.charge.stateKeys ? exclusive.charge.stateKeys.name : '' }}</td>
                        <td>
                            {% if exclusive.rateHousing.image is not empty %}
                                {{ exclusive.rateHousing.image|length > 0 ? 'Si' : 'No' }}
                            {% endif %}
                        </td>
                        {% if exclusive.agency.id == app.user.agency.id %}
                            <td>
                                <a class="btn btn-info" href="{{ path('property_charge', {'id': exclusive.id, 'idChargeType': exclusive.charge.chargeType.id}) }}">Ver</a>
                            </td>
                        {% endif %}
{#                        <td>{{ exclusive.propertyReductions.count }}</td>
                        <td>
                            {% if exclusive.propertyReductions is defined %}
                                {% if exclusive.propertyReductions.count > 0 %}
                                    {{ exclusive.propertyReductions.last.price|number_format(0, ',', '.') }} €
                                {% endif %}
                            {% endif %}
                        </td>
                        <td>
                            {% set sum = 0 %}

                            {% if exclusive.propertyReductions is defined %}
                                {% if exclusive.propertyReductions.count > 0 %}
                                    {% for reduction in exclusive.propertyReductions  %}
                                        {% set sum = sum + reduction.price %}
                                    {% endfor %}
                                    {{ sum / exclusive.charge.price * 100|number_format(0, ',', '.') }} %
                                {% endif %}
                            {% endif %}
                        </td>#}
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dataTableJs') }}
{% endblock %}