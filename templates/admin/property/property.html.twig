{% extends 'admin/layout.html.twig' %}

{% block title %} Listado Noticias {% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            {#        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>#}
            <h1 class="h3 mb-4 text-gray-800 float-left">Listado de noticias</h1>
            {#            <a class="btn btn-success float-right" href="{{ path('news_new') }}">Crear Noticia</a>#}
            <a class="btn btn-success float-right" href="#" data-toggle="modal" data-target="#createNewModal">
                Crear Noticia
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table-striped table-sm table-hover dataTable" id="dataTable" width="100%" cellpadding="0">
                    <thead>
                    <tr class="text-center">
{#                        <th>Id</th>#}
                        <th>Fecha</th>
                        <th>Asesor</th>
                        <th>Motivo</th>
                        <th>Dirección</th>
{#                        <th>Portal</th>#}
{#                        <th>Piso</th>#}
                        <th>Propietario</th>
                        <th>Móvil &nbsp;&nbsp;&nbsp;&nbsp; - &nbsp;&nbsp;&nbsp; Teléfono</th>
                        {#                        <th>Zona</th>#}
                        {#                        <th>Situación</th>#}
                        <th>Precio</th>
                        <th>V</th>
                        <th>D</th>
                        <th>B</th>
                        <th>M²</th>
                        <th>Fotos</th>
                        <th>Últ Llamada</th>
                        <th>Comentario</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for property in properties %}
                        {% if property.enabled %}
                            {% if property.charge is null %}


                                {#                                    {% if property.rateHousing.charge is not defined %}#}

                                <tr class="clickable-row" data-href="{{ path('property_show', {'id': property.id}) }}">
                                    {#                                <td>{{ property.id }}</td>#}
                                    <td>{{ property.created|date('d/m/Y') }}</td>
                                    <td>
                                        {{ property.commercial.fullName }}
                                        {#                                    {% if property.street is not empty and property.street.zone is not empty %}#}
                                        {#                                        {{ property.street.zone.name }}#}
                                        {#                                    {% endif %}#}
                                    </td>
                                    {#                                <td>#}
                                    {#                                    {% if property.reason is not empty and property.reason.situation is not empty %}#}
                                    {#                                        {{ property.reason.situation.name }}#}
                                    {#                                    {% endif %}#}
                                    {#                                </td>#}
                                    <td>
                                        {% if property.reason is not empty %}
                                            {{ property.reason.name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if property.street is not empty %}
                                            {{ property.street.name }}
                                        {% endif %}
                                    Nº {{ property.portal }},
                                    {{ property.floor }}</td>
                                    <td>{{ property.fullName }}</td>
                                    <td>
                                        {% if property.mobile is not empty or property.phone is not empty %}
                                            {{ property.mobile }} - {{ property.phone }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if property.price is not empty %}
                                            {{ property.price|number_format(0, ',', '.') }} €
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ property.rateHousing ? 'Si' : 'No' }}
                                    </td>
                                    <td>
                                        {% if property.rateHousing %}
                                            {{ property.rateHousing.bedrooms }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if property.rateHousing %}
                                            {{ property.rateHousing.bathrooms }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if property.rateHousing %}
                                            {{ property.rateHousing.realMeters }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if property.rateHousing %}
                                            {% if property.rateHousing.image.count > 0 %}
                                                Si
                                            {% else %}
                                                No
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                    <td>
{#                                        {% if property.noteNew.last %}#}
{#                                            {{ property.noteNew.last.nextCall|date('d-m-Y') }}#}
{#                                        {% endif %}#}
                                        proxima llamada
                                    </td>
                                    <td data-toggle="tooltip" data-placement="top" title="{{ property.comment }}">
                                        {{ property.comment|slice(0, 50) }}
                                    </td>
                                </tr>

                                {#                                    {% endif %}#}

                                {#                                {% if property.rateHousing.charge is not defined %}#}
                                {#                                                                    {% if property.rateHousing.charge is not empty %}#}
                                {#                                {% endif %}#}

                            {% endif %}
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createNewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Crear Nueva Noticia</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ render_esi(controller('App\\Controller\\PropertyController::property')) }}
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dataTableJs') }}
{% endblock %}