{% extends 'admin/layout.html.twig' %}

{% block title %}Editar Noticia a Desarrollar{% endblock %}

{% block content %}
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary float-left">Editar Noticia a Desarrollar</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group row">
                <div class="col-md-auto">{{ form_row(form.created) }}</div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="col-md-auto">{{ form_row(form.commercial) }}</div>
                {% endif %}
                <div class="col-md-auto">{{ form_row(form.situation) }}</div>
                <div class="col-md-auto">{{ form_row(form.reason) }}</div>
                <div class="col-md-auto">{{ form_row(form.typeProperty) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-auto">{{ form_row(form.zone) }}</div>
                <div class="col-md-auto">{{ form_row(form.street) }}</div>
                <div class="col-md-auto">{{ form_row(form.portal) }}</div>
                <div class="col-md-auto">{{ form_row(form.floor) }}</div>
            </div>

            <div class="form-group row">
                <div class="col-md-auto">{{ form_row(form.full_name) }}</div>
                <div class="col-md-auto">{{ form_row(form.mobile) }}</div>
                <div class="col-md-auto">{{ form_row(form.phone) }}</div>
                <div class="col-md-auto">{{ form_row(form.url) }}</div>
            </div>
            <div class="form-group">
                <div class="col-md-auto">{{ form_row(form.comment) }}</div>
            </div>
            <button class="btn btn-success">{{ button_label|default('Actualizar') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="card-footer">
{#            {{ include('admin/_back_link.html.twig', {'route': 'property_to_developer_index'}) }}#}
            <a class="btn btn-info" href="{{ path('property_to_developer_show', {'id': property.id }) }}">
                Ver Noticia a Desarrollar
            </a>
        </div>
    </div>

{% endblock %}
