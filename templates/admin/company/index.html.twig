{% extends 'admin/layout.html.twig' %}

{% block content %}
    <!-- Page Heading -->
{#    <h1 class="h3 mb-4 text-gray-800 float-left">Company Index</h1>#}
{#    <h1>Company index</h1>#}
{#    <a class="btn btn-success float-right" href="{{ path('company_new') }}">Create new</a>#}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
    {#        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>#}
            <h1 class="h3 mb-4 text-gray-800 float-left">Listado Compañias</h1>
            <a class="btn btn-success float-right" href="{{ path('company_new') }}">Crear Empresa</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellpadding="0">
                    <thead>
                    <tr>
                        <th>Nombre Empresa</th>
                        <th>Nº Trabajadores</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.name }}</td>
                            <td>
                                {{ company.users|length }}
{#                                {% for user in company.users %}#}
{#                                    {{ user.email }}#}
{#                                {% endfor %}#}
                            </td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('company_show', {'id': company.id}) }}">Ver</a>
                                <a class="btn btn-info" href="{{ path('company_edit', {'id': company.id}) }}">Editar</a>
                            </td>
                            <td>
                                {% if company.users|length > 0 %}
                                    Empresa en uso.
                                {% else %}
                                    {{ include('admin/_delete_form.html.twig', {'route': 'company_delete', 'entity': company}) }}
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No se encontrarón archivos</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}