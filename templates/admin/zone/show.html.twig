{% extends 'admin/layout.html.twig' %}

{% block title %}Zona{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-4 text-gray-800 float-left">Detalles de zona</h1>
            {#            <a class="btn btn-success float-right" href="{{ path('company_new') }}">Crear Empresa</a>#}
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ zone.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ zone.name }}</td>
                    </tr>
                    <tr>
                        <th>Noticias</th>
                        <td>
                            {% if zone.news.count > 0 %}
                                <ul class="list-group">
                                    {% for zone in zone.news %}
                                        <li class="list-group-item">
                                            <a href="{{ path('news_show', {'id': zone.id}) }}">
                                                {{ zone }} â‚¬
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                Empresa sin noticias
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            {{ include('admin/_back_link.html.twig', {'route': 'zone_index'}) }}
            {{ include('admin/_edit_link.html.twig', {'route': 'zone_edit', 'id': zone.id, 'button_label': 'Editar'}) }}

            {#        <a class="btn btn-primary" href="{{ path('zone_edit', {'id': zone.id}) }}">Editar</a>#}
        </div>
    </div>
{#    {{ include('admin/_delete_form.html.twig', {'route': 'zone_delete', 'entity': zone}) }}#}
{% endblock %}
