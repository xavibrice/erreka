{% extends 'admin/layout.html.twig' %}

{% block title %}Reason index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_script_tags('dataTable') }}
{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            {#        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>#}
            <h1 class="h3 mb-4 text-gray-800 float-left">Lista de motivos</h1>
            <a class="btn btn-success float-right" href="{{ path('reason_new') }}">Crear Motivo</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped" id="dataTable" width="100%" cellpadding="0">
                    <thead>
                    <tr>
                        <th>Situaci√≥n</th>
                        <th>Motivo</th>
                        <th>Ver</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reason in reasons %}
                        <tr>
                            <td>{{ reason.situation.name }}</td>
                            <td>{{ reason.name }}</td>
                            <td>
                                {{ include('admin/_show_link.html.twig', {'route': 'reason_show', 'id': reason.id }) }}
                            </td>
                            <td>
                                {{ include('admin/_edit_link.html.twig', {'route': 'reason_edit', 'id': reason.id }) }}
                            </td>
                            <td>
                                {{ include('admin/_delete_form.html.twig', {'route': 'reason_delete', 'entity': reason, 'count': reason.news.count}) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
