{% extends 'admin/layout.html.twig' %}

{% block title %}Hello LocalController!{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-4 text-gray-800 float-left">Listado Locales {{ properties|length }}</h1>
            <a class="btn btn-success float-right" href="#" data-toggle="modal" data-target="#createNewModal">
                Crear Local
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped" id="dataTable" width="100%" cellpadding="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Price</th>
                        <th>Nombre y apellido</th>
                        <th>Estado</th>
                        <th>Tipo de Propiedad</th>
                        <th>Ver</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for property in properties %}
                        <tr>
                            <td>{{ property.id }}</td>
                            <td>{{ property.price }}</td>
                            <td>
                                {{ property.fullName }}
                            </td>
                            <td>{{ property.reason.name }}</td>
                            <td>{{ property.typeProperty.name }}</td>
                            <td>
                                {{ include('admin/_show_link.html.twig', {'route': 'local_show', 'id': property.id }) }}
                            </td>
                            <td>
{#                                {{ include('admin/_edit_link.html.twig', {'route': 'company_edit', 'id': company.id }) }}#}
                            </td>
                            <td>
{#                                {{ include('admin/_delete_form.html.twig', {'route': 'company_delete', 'entity': company, 'count': company.users.count}) }}#}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No se encontraron registros</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createNewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Crear nuevo local</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
{#                    {{ render_esi(controller('App\\Controller\\PropertyController::property')) }}#}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit">Crear</button>
                    {{ form_end(form) }}
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dataTableJs') }}
{% endblock %}