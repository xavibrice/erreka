{% extends 'admin/layout.html.twig' %}

{% block title %}Client index{% endblock %}

{% block content %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Full_name</th>
                <th>Price</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Comment</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.fullName }}</td>
                <td>{{ client.price }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.mobile }}</td>
                <td>{{ client.comment }}</td>
                <td>{{ client.created ? client.created|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
