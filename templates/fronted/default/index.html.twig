                                <p class="content-c">
                                    Tu seguridad es nuestro objetivo
                                </p>
                            </div>
                            <div class="card-footer-c">
                                <a href="{{ path('guaranteed_rental') }}" class="link-c link-icon">Más Información
                                    <span class="fa fa-angle-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Fín Servicios Destacados -->

        <!-- ======= Últimas Propiedades ======= -->
        <section class="section-property section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">Últimas Propiedas</h2>
                            </div>
                            <div class="title-link">
                                <a href="{{ path('search_fronted') }}">Todas las propiedades
                                    <span class="fas fa-angle-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="property-carousel" class="owl-carousel owl-theme">
                    {% for property in properties %}
                    {% if property.countPropertyContract == 0 %}
                    <div class="carousel-item-b">
                        <div class="card-box-a card-shadow">
                            <div class="img-box-a">
                                {% if property[0].rateHousing.image.first  %}
                                    <img class="img-a img-fluid" src="{{ uploaded_asset(property[0].rateHousing.image.first.imagePath)|imagine_filter('squared_thumbnail_large') }}" alt="">
                                {% else %}
                                    <img class="img-a img-fluid" src="{{ asset('img/not-available.jpg')|imagine_filter('squared_thumbnail_large') }}" alt="Foto no disponible">
                                {% endif %}
                            </div>
                            <div class="card-overlay">
                                <div class="card-overlay-a-content">
                                    <div class="card-header-a">
                                        <h2 class="card-title-a">
                                            <a href="{{ path('search_details', {'reference': property[0].reference}) }}">{{ property[0].street.name }}
                                                <br /> {{ property[0].street.zone.name }}</a>
                                        </h2>
                                    </div>
                                    <div class="card-body-a">
                                        <div class="price-box d-flex">
                                            <span class="price-a"><span class="color-b">{{ property[0].reason.name }}</span> | {{ (property[0].charge.price - property.sumPropertyReduction)|number_format  }}€</span>
                                        </div>
                                        <a href="{{ path('search_details', {'reference': property[0].reference}) }}" class="link-a">Haga clic aquí para ver
                                            <span class="fas fa-angle-right"></span>
                                        </a>
                                    </div>
                                    <div class="card-footer-a">
                                        <ul class="card-info d-flex justify-content-around">
                                            <li>
                                                <h4 class="card-info-title">Area</h4>
                                                <span>{{ property[0].rateHousing.realMeters }}m<sup>2</sup></span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Dormitorios</h4>
                                                <span>{{ property[0].rateHousing.bedrooms }}</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Baños</h4>
                                                <span>{{ property[0].rateHousing.bathrooms }}</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Garaje</h4>
                                                <span>{{ property[0].rateHousing.directGarage ? 'Si' : 'No' }}</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </section>
        <!-- Fín Últimas Propiedades -->

        <!-- ======= Servicios ======= -->
