{% extends 'fronted/fronted.html.twig' %}

{% block metadata %}
<meta name="title" content="Inmobiliaria Erreka - Inicio">
<meta name="description" content="Erreka Inmobiliaria ubicada en la Peña con mas de 16 años en el sector inmobiliarion en el barrio La Peña, tanto en venta como en alquiler.">

<meta property="og:type" content="website">
<meta property="og:url" content="{{ app.request.schemeAndHttpHost ~ app.request.requestUri }}">
<meta property="og:title" content="Inmobiliaria Erreka - Inicio">
<meta property="og:description" content="Erreka Inmobiliaria ubicada en la Peña con mas de 16 años en el sector inmobiliarion en el barrio La Peña, tanto en venta como en alquiler.">
<meta property="og:image" content="{{ asset('img/logo-erreka.png')|imagine_filter('squared_thumbnail_large') }}">

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .carousel-caption {
            bottom: 3rem;
            z-index: 10;
        }

        .carousel-item {
            height: 50rem;
        }
        .carousel-item > img {
            position: absolute;
            top: 0;
            left: 0;
            min-width: 100%;
            height: auto;
        }
    </style>
{% endblock %}

{% block title %}Inmobiliaria Erreka - Inicio{% endblock %}

{% block body %}
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="bd-placeholder-img" src="{{ asset('img/propiedad-uno.jpg') }}" alt="">
                <div class="container">
                    <div class="carousel-caption rounded-top text-right text-dark">
                        <h1>Erreka Inmobiliaria</h1>
                        <p><a class="btn btn-primary" href="{{ path('about_us') }}" role="button">Más Información</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="bd-placeholder-img" src="{{ asset('img/propiedad-dos.jpg') }}" alt="">
                <div class="container">
                    <div class="carousel-caption text-center text-dark">
                        <h1>Erreka Garrido Inmobiliaria</h1>
                        <p><a class="btn btn-primary" href="{{ path('about_us') }}" role="button">Más Información</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="bd-placeholder-img" src="{{ asset('img/propiedad-tres.jpg') }}" alt="">
                <div class="container">
                    <div class="carousel-caption text-right text-dark">
                        <h1>Asesoría Garrido</h1>
                        <p><a class="btn btn-primary" href="{{ path('about_us') }}" role="button">Más Información</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="bg-light pt-3 px-3 pt-md-0 px-md-5 text-center overflow-hidden">
        <div class="bg-white shadow-sm mx-auto p-5 mb-auto" style="width: 80%; height: auto; border-radius: 21px 21px 0 0;">
            <form class="pl-5 pr-5" method="get" action="{{ path('search_fronted') }}">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="reason">Venta/Alquiler</label>
                        <select id="reason" name="reason" class="form-control" required>
                            <option selected disabled> Selecciona... </option>
                            <option value="1">Venta</option>
                            <option value="0">Alquiler</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="bedrooms">Dormitorios</label>
                        <input type="number" name="bedrooms" class="form-control" id="bedrooms">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="price">Precio</label>
                        <input type="text" name="price" class="form-control" id="price">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="type">Tipo vivienda</label>
                        <select id="type" name="type" class="form-control">
                            <option selected disabled> Selecciona... </option>
                            <option>Vivienda</option>
                            <option>Local</option>
                            <option>Piso</option>
                        </select>
                    </div>
                    <div class="col-md-2 mt-1">
                        <button type="submit" class="btn btn-success form-control mt-4">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="container marketing mt-3">
        <div class="row text-center mt-5">
            <div class="col-lg-6 col-md-6 mb-4">
                <div class="card h-100 border-0">
                    <i class="fas fa-home fa-5x"></i>
                    <div class="card-body">
                        <h4 class="card-title">Vendemos tu vivienda en 90 días</h4>
                        <p class="card-text">¿Quiéres conoces más de nuestro método exclusivo?</p>
                        <p class="text-center mt-3">
                            <a href="{{ path('to_sell') }}" class="btn btn-info">Más información</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 mb-4">
                <div class="card h-100 border-0">
                    <i class="fas fa-house-user fa-5x"></i>
                    <div class="card-body">
                        <h4 class="card-title">Alquiler garantizado</h4>
                        <p class="card-text">Tu seguridad es nuestro objetivo</p>
                        <p class="text-center mt-3">
                            <a href="{{ path('guaranteed_rental') }}" class="btn btn-info">Más información</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid marketing mt-3 bg-light">
        <div class="container mt-5">
            <h2 class="text-center pt-5">Viviendas Destacadas</h2>
            <div class="row mt-5 pb-5">
                {% for property in properties %}
                    {% if property.countPropertyContract == 0 %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <a href="{{ path('search_details', {'reference': property[0].reference}) }}" class="prop-entry d-block">
                                <figure>
                                    {% if property[0].rateHousing.image.first  %}
                                        <img class="img-fluid" src="{{ uploaded_asset(property[0].rateHousing.image.first.imagePath)|imagine_filter('squared_thumbnail_large') }}" alt="">
                                    {% else %}
                                        <img src="{{ asset('img/logo-erreka.png')|imagine_filter('squared_thumbnail_large') }}" alt="Image" class="img-fluid">
                                    {% endif %}
                                </figure>
                                <div class="prop-text">
                                    <div class="inner">
                                        <span class="price rounded">{{ (property[0].charge.price - property.sumPropertyReduction)|number_format  }}€</span>
                                        <h3 class="title">{{ property[0].street.name }}</h3>
                                        <p class="location">{{ property[0].street.zone.name }}</p>
                                    </div>
                                    <div class="prop-more-info">
                                        <div class="inner d-flex">
                                            <div class="col">
                                                <span>Area:</span>
                                                <strong>{{ property[0].rateHousing.realMeters }}m<sup>2</sup></strong>
                                            </div>
                                            <div class="col">
                                                <span>Dormitorios:</span>
                                                <strong>{{ property[0].rateHousing.bedrooms }}</strong>
                                            </div>
                                            <div class="col">
                                                <span>Baños:</span>
                                                <strong>{{ property[0].rateHousing.bathrooms }}</strong>
                                            </div>
                                            <div class="col">
                                                <span>Garaje:</span>
                                                <strong>{{ property[0].rateHousing.directGarage ? 'Si' : 'No' }}</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container marketing mt-3">
            <h1 class="text-center">Más servicios</h1>
            {#           <p class="mb-3 text-center">Nuestros servicios</p>#}
            <div class="row text-center mt-5">
                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <i class="fas fa-gavel fa-5x"></i>
                        <div class="card-body">
                            <h4 class="card-title">Despacho Abogados</h4>
                            <p class="card-text">Vendemos al mayor precio en el menor tiempo.</p>
                            <a href="{{ path('services_lawyers') }}" class="btn btn-info">Más información</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <i class="fas fa-file-signature fa-5x"></i>
                        <div class="card-body">
                            <h4 class="card-title">Asesoría Fiscal</h4>
                            <p class="card-text">Asesoría integral de empresas y autónomos.</p>
                            <a href="{{ path('services_tax_advice') }}" class="btn btn-info">Más información</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <i class="fas fa-user-secret fa-5x"></i>
                        <div class="card-body">
                            <h4 class="card-title">Seguros</h4>
                            <p class="card-text">Garrido Correduría de seguros ubicada en Bilbao con amplia experiencia y dedicación de más de 30 años en el sector asegurador.</p>
                            <a href="{{ path('services_insurance') }}" class="btn btn-info">Más información</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row text-center mt-5">
                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <i class="fas fa-paint-brush fa-5x"></i>
                        <div class="card-body">
                            <h4 class="card-title">Reformas</h4>
                            <p class="card-text">Proyecto de rehabilitación integral de la vivienda.</p>
                            <a href="{{ path('services_reforms') }}" class="btn btn-info">Más información</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <i class="fas fa-hand-holding-usd fa-5x"></i>
                        <div class="card-body">
                            <h4 class="card-title">Financiación</h4>
                            <p class="card-text">Hasta el 100% del precio de la vivienda.</p>
                            <a href="{{ path('services_financing') }}" class="btn btn-info">Más información</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <i class="fas fa-lightbulb fa-5x"></i>
                        <div class="card-body">
                            <h4 class="card-title">Certificado Energético</h4>
                            <p>Obligatorio tanto para la venta como para el alquiler.</p>
                            <a href="{{ path('services_energy_certificate') }}" class="btn btn-info">Más información</a>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-center mt-3">
            </p>
        </div>
    <hr class="featurette-divider">
{% endblock %}