{% extends 'fronted/fronted.html.twig' %}

{% block title %}Abogados | Erreka Inmobiliaria (La Peña){% endblock %}

{% block body %}
    <main id="main">
        <section class="intro-single">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box">
                            <h1 class="title-single">Abogados</h1>
                            <span class="color-text-a">Contamos con un equipo de profesionales expertos en distintas materias y con aplicación de las nuevas tecnologías que se adapten a sus necesidades.</span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('default') }}">Inicio</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Abogados
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <div class="container mt-5">
        <div class="text-center">
            <div class="row">
                <div class="col-md-6">
                    <img src="{{ asset('img/abogados.png') }}" class="card-img-top" alt="Abogados">
                </div>
                <div class="col-md-6">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">Gabinete jurídico especializado en las siguientes áreas:</h5>
                            <p class="card-text"></p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Penal</li>
                            <li class="list-group-item">Civil (accidentes de tráfico, herencias, procedimientos matrimoniales etc…)</li>
                            <li class="list-group-item">Laboral (despidos, reclamación de cantidades, etc…)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
