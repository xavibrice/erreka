{% extends 'fronted/fronted.html.twig' %}

{% block title %}Comprar pisos o inmuebles en Bilbao | Erreka Inmobiliaria{% endblock %}

{% block metadata %}
    <meta name="title" content="Comprar pisos o inmuebles en Bilbao | Erreka Inmobiliaria">
    <meta name="description" content="Amplia oferta de pisos nuevos y baratos en Bilbao. Encuentra tu vivienda, duplex e inmueble al mejor precio en Bilbao: La Peña, Zabala, Casco Viejo, Santa Isabel, Atxuri, Rekalde, Bilbao La Vieja, Santutxu, Bilborock.">
    <meta name="keywords" content="comprar pisos en bilbao, comprar pisos baratos, comprar pisos nuevos, pisos en venta, comprar vivienda en bilbao, inmuebles en venta en bilbao">
    <meta name="author" content="errekainmobiliaria.com">
    <meta name="copyright" content="Erreka Inmobiliaria" />

    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.request.schemeAndHttpHost ~ app.request.requestUri }}">
    <meta property="og:title" content="Comprar pisos o inmuebles en Bilbao | Erreka Inmobiliaria">
    <meta property="og:description" content="Amplia oferta de pisos nuevos y baratos en Bilbao. Encuentra tu vivienda, duplex e inmueble al mejor precio en Bilbao: La Peña, Zabala, Casco Viejo, Santa Isabel, Atxuri, Rekalde, Bilbao La Vieja, Santutxu, Bilborock.">
    <meta property="og:image" content="{{ asset('img/logo-erreka.png')|imagine_filter('squared_thumbnail_large') }}">
{% endblock %}

{% block body %}
    <main id="main">
        <section class="intro-single">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box">
                            <h1 class="title-single">Viviendas en venta</h1>
                            <span class="color-text-a">Aprovecha la oportunidad de comprar tu inmueble al mejor precio.</span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('default') }}">Inicio</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Comprar
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
    </main>

